{{#each erros}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-9 mx-auto">
        <div class="card text-white bg-dark mb-3">
          <div class="card-body">
            <h5 class="card-title text-center">Criar novo Usuário</h5>
            <form class="form-signin" method="POST" action="/admin_panel/manageuser/new">
              <div class="form-label-group">
                <input type="text" id="nameComplete" name="nameComplete" class="form-control" placeholder="Nome Completo" required autofocus>
              </div>
              <br>
              <div class="form-label-group">
                  <input type="text" id="name" name="name" class="form-control" placeholder="Usuário" required autofocus>
              </div>
              <br>
              <div class="form-label-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Senha" required>
              </div>
              <br>
                <div class="row">
                    <div class="col-xs-4 btn-space btn-spacey"> 
                        <button class="btn btn-info " type="submit">Criar Conta</button>
                    </div>
                    <div class="col-xs-4 btn-space"> 
                        <a href="/admin_panel/manageuser"><button class="btn btn-danger" type="button" ">Cancelar</button></a>
                    </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>